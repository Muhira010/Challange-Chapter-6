<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:layout_width="150dp"
        android:layout_height="256dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:optRoundCardBackgroundColor="#F4F4F4"
        app:optRoundCardCornerRadius="15dp"
        app:optRoundCardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_posterPlaying"
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kena"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dp" />

            <TextView
                android:id="@+id/tv_titlePlaying"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/nunitobold"
                android:maxLines="1"
                android:text="Kena: The Bridge Of Spirit"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/iv_posterPlaying"
                app:layout_constraintStart_toStartOf="@+id/iv_posterPlaying"
                app:layout_constraintTop_toBottomOf="@+id/iv_posterPlaying" />

            <TextView
                android:id="@+id/tv_ratingPlaying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="3.7"
                android:textColor="#777777"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/tv_titlePlaying"
                app:layout_constraintTop_toBottomOf="@+id/tv_titlePlaying" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_star_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ratingPlaying"
                app:layout_constraintStart_toEndOf="@+id/tv_ratingPlaying"
                app:layout_constraintTop_toTopOf="@+id/tv_ratingPlaying" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>


</androidx.constraintlayout.widget.ConstraintLayout>